<style type="text/css">
  body {
    background-color: #DADADA;
  }
  body > .grid {
    height: 100%;
  }
  .image {
    margin-top: -100px;
  }
  .column {
    max-width: 450px;
  }
</style>
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui red image header">
      <div class="content">Cofo管理系统</div>
    </h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.input_field :email, placeholder: "邮箱"%>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.input_field :password, placeholder: "密码" %>
          </div>
        </div>
        <%= f.submit "登录", class: "ui fluid large red submit button" %>
      </div>
    <% end %>
  </div>
</div>
