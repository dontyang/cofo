<h3 class="ui red header">项目登记</h3>
<div class="ui red segment">
  <%= simple_form_for @project, url: projects_path do |f| %>
  	<div class="four fields">
      <%= f.input :name, label: '项目名称：', wrapper_html: {class: "required"} %>
      <%= f.input :start_on, as: :string, label: '开工时间：', input_html: {onfocus: "(this.type='date')", onblur: "(this.type='text')"} %>
    </div>
    <div class="two fields">
      <%= f.input :address, label: '项目地址：' %>
    </div>
    <%= f.submit '提交', class: 'ui red button ' %>
  <% end %>
</div>
