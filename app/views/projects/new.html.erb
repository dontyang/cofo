<h3 class="ui red header">项目登记</h3>
<div class="ui red segment">
  <%= simple_form_for @project, url: projects_path do |f| %>
  	<div class="four fields">
      <%= f.input :name, label: '项目名称：', wrapper_html: {class: "required"} %>
      <%= f.input :start_on, as: :string, label: '开工时间：', input_html: {onfocus: "(this.type='date')", onblur: "(this.type='text')"} %>
    </div>
    <div class="two fields">
      <%= f.input :address, label: '项目地址：' %>
    </div>
  	<div class="two fields">
      <%= f.input :sigonggongyi, as: :text, label: '施工工艺：', input_html: {maxlength: 1000} %>
    </div>
    <div class="two fields">
      <%= f.input :area, as: :text, label: '面积(范围)：', input_html: {maxlength: 1000} %>
    </div>
    <div class="two fields">
      <%= f.input :xianchang, as: :text, label: '现场情况：', input_html: {maxlength: 1000} %>
    </div>
    <div class="two fields">
      <%= f.input :yangban, as: :text, label: '样板先行(工作组织)：', input_html: {maxlength: 1000} %>
    </div>
    <div class="two fields">
      <%= f.input :jihua, as: :text, label: '工期计划(施工及人员安排)：', input_html: {maxlength: 1000} %>
    </div>
    <div class="two fields">
      <%= f.input :shebei, as: :text, label: '进场设备工具计划：', input_html: {maxlength: 1000} %>
    </div>
    <div class="two fields">
      <%= f.input :sigongshuoming, as: :text, label: '现场施工补充说明：', input_html: {maxlength: 1000} %>
    </div>
    <%= f.submit '提交', class: 'ui red button ' %>
  <% end %>
</div>
