<h3 class="ui red header">项目列表</h3>
<div class="ui red segment">
  <%= simple_form_for @search_params, url: '', method: :get, wrapper: 'semantic_search' do |f| %>
    <div class="ui six column grid">
      <%= f.input "name-like", placeholder: '项目名称' %>
      <div class="column">
        <%= f.submit '搜索', class: 'ui red button' %>
      </div>
    </div>
  <% end %>
</div>
<div class="ui segment">
  <table class="ui selectable striped celled table">
    <thead>
      <tr>
        <th class="center aligned">序号</th>
        <th class="center aligned">项目名称</th>
        <th class="center aligned">开工时间</th>
        <th class="center aligned">项目地址</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'list', collection: @projects, as: :project %>
    </tbody>
  </table>
  <%= paginate @projects %>
</div>
