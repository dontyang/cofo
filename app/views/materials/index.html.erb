<h3 class="ui red header">材料列表</h3>
<div class="ui red segment">
  <%= simple_form_for @search_params, url: '', method: :get, wrapper: 'semantic_search' do |f| %>
    <div class="ui six column grid">
      <%= f.input :vendor_id, as: :select, collection: Vendor.form_options, include_blank: "选择供应商", input_html: { class: 'ui fluid dropdown' } %>
      <%= f.input :project_id, as: :select, collection: Project.form_options, include_blank: "选择项目", input_html: { class: 'ui fluid dropdown' } %>
      <div class="column">
        <%= f.submit '搜索', class: 'ui red button' %>
      </div>
    </div>
  <% end %>
</div>
<div class="ui segment">
  <%= link_to "材料登记", new_material_path, class: "ui red button" %>
  <table class="ui selectable striped celled table">
    <thead>
      <tr>
        <th class="center aligned">序号</th>
        <th class="center aligned">材料名称</th>
        <th class="center aligned">数量</th>
        <th class="center aligned">价格</th>
        <th class="center aligned">供应商</th>
        <th class="center aligned">项目</th>
        <th class="center aligned">采购日期</th>
        <th class="center aligned">备注</th>
        <th class="center aligned">操作</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'list', collection: @materials, as: :material %>
    </tbody>
  </table>
  <%= paginate @materials %>
</div>
